<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".Profile_Page">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorTitle"
        android:elevation="10dp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backBtn"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="0dp"
                app:icon="@drawable/baseline_arrow_back_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="?attr/colorIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/welcmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Profile"
                android:textColor="?attr/colorOnBackground"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_profile_image"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_24"
                android:translationZ="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.133"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="@id/imageView" />

            <TextView
                android:id="@+id/studentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Student"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/nameText"
                app:layout_constraintBottom_toBottomOf="@id/imageView"/>

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0.8dp"
                android:background="?attr/colorOnSurfaceVariant"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/contactText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Contact Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                android:textColor="?attr/colorOnBackground"/>

            <ImageView
                android:id="@+id/emailImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/contactText"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/baseline_email_24"/>


            <TextView
                android:id="@+id/emailtextHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:text="Email"
                android:textColor="?attr/colorOnBackground"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/emailImage"
                app:layout_constraintTop_toTopOf="@id/emailImage" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text=""
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:layout_marginBottom="-5dp"
                app:layout_constraintBottom_toBottomOf="@id/emailImage"
                app:layout_constraintStart_toEndOf="@id/emailImage"
                app:layout_constraintTop_toBottomOf="@id/emailtextHeading"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/phoneImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/emailImage"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/baseline_phone_24"/>

            <TextView
                android:id="@+id/phonetextHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:text="Phone"
                android:textColor="?attr/colorOnBackground"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/phoneImage"
                app:layout_constraintTop_toTopOf="@id/phoneImage" />

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text=""
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:layout_marginBottom="-5dp"
                app:layout_constraintBottom_toBottomOf="@id/phoneImage"
                app:layout_constraintStart_toEndOf="@id/phoneImage"
                app:layout_constraintTop_toBottomOf="@id/phonetextHeading"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/personalText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/phoneImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Personal Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textColor="?attr/colorOnBackground"/>

            <ImageView
                android:id="@+id/ageImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/personalText"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/baseline_calendar_month_24"/>

            <TextView
                android:id="@+id/agetextHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginStart="20dp"
                android:text="Age"
                android:textColor="?attr/colorOnBackground"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ageImage"
                app:layout_constraintTop_toTopOf="@id/ageImage" />

            <TextView
                android:id="@+id/ageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginStart="20dp"
                android:text=""
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/ageImage"
                app:layout_constraintStart_toEndOf="@id/ageImage"
                app:layout_constraintTop_toBottomOf="@id/agetextHeading"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/stateImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/ageImage"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/baseline_location_on_24"/>

            <TextView
                android:id="@+id/statetextHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:text="State"
                android:textColor="?attr/colorOnBackground"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/stateImage"
                app:layout_constraintTop_toTopOf="@id/stateImage"/>

            <TextView
                android:id="@+id/stateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginStart="20dp"
                android:text=""
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/stateImage"
                app:layout_constraintStart_toEndOf="@id/stateImage"
                app:layout_constraintTop_toBottomOf="@id/statetextHeading"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>